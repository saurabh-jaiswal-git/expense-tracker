# AI Provider Configuration
# Set this to either 'openai' or 'anthropic'
AI_PROVIDER=anthropic

# OpenAI Configuration (required if AI_PROVIDER=openai)
OPENAI_API_KEY=your_openai_api_key_here

# Anthropic Configuration (required if AI_PROVIDER=anthropic)
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Admin User Configuration (optional - defaults to admin/admin)
ADMIN_USERNAME=admin
ADMIN_PASSWORD=admin

# Database Configuration (for production)
# DB_USERNAME=your_db_username
# DB_PASSWORD=your_db_password
# DB_URL=jdbc:postgresql://localhost:5432/expense_tracker

# Server Configuration (optional)
# SERVER_PORT=8080 